<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.splash.SplashFragment">

    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp" tools:src="@tools:sample/avatars[0]" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTRO APP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.8"
            android:textSize="36sp" android:textColor="@android:color/white"/>


    <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/containerLeft1"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:elevation="30dp"
            app:diagonal_angle="15"
            app:diagonal_direction="left"
            app:diagonal_position="right"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">

        <ImageView
                android:adjustViewBounds="true"
                android:scaleType="matrix"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                android:id="@+id/imageLayerLeft1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </com.github.florent37.shapeofview.shapes.DiagonalView>

    <com.github.florent37.shapeofview.shapes.DiagonalView

            android:layout_width="150dp"
            android:layout_height="0dp"
            android:elevation="31dp"
            app:diagonal_angle="8"
            app:diagonal_direction="left"
            app:diagonal_position="right"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/containerLeft2" android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/containerLeft1"
            android:layout_marginRight="32dp">

        <ImageView
                android:adjustViewBounds="true"
                android:scaleType="matrix"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                android:id="@+id/imageLayerLeft2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </com.github.florent37.shapeofview.shapes.DiagonalView>


    <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/containerRight1"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:elevation="30dp"
            app:diagonal_angle="14"
            app:diagonal_direction="left"
            app:diagonal_position="left"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">

        <ImageView
                android:adjustViewBounds="true"
                android:scaleType="matrix"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                android:id="@+id/imageLayerRight1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </com.github.florent37.shapeofview.shapes.DiagonalView>
    <com.github.florent37.shapeofview.shapes.DiagonalView
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:elevation="31dp"
            app:diagonal_angle="9"
            app:diagonal_direction="left"
            app:diagonal_position="left"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/containerRight2" app:layout_constraintStart_toEndOf="@+id/containerRight1"
            android:layout_marginStart="32dp" android:layout_marginLeft="32dp">

        <ImageView
                android:adjustViewBounds="true"
                android:scaleType="matrix"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                android:id="@+id/imageLayerRight2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </com.github.florent37.shapeofview.shapes.DiagonalView>
</androidx.constraintlayout.widget.ConstraintLayout>
